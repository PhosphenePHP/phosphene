{
	"name": "rhubarbphp/rhubarb",
	"description": "A modern enterprise ready PHP framework",
	"keywords": [ "php", "framework" ],
	"homepage": "http://www.rhubarbphp.com/",
	"license": "Apache-2.0",
    "autoload": {
		"psr-4": {
			"Rhubarb\\Crown\\": "src/",
		    "Rhubarb\\Crown\\Tests\\": "tests/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	},
	"require": {
	  "php": ">=5.6.0"
	},
	"require-dev": {
	    "rhubarbphp/custard": "^1.0.0",
		"rhubarbphp/module-build-status-updater": "^1.0.0",
		"tan-tan-kanarek/github-php-client": "dev-master as 1.0",
		"codeception/codeception": "^2.0.0",
		"phploc/phploc": "^3.0.0",
		"theseer/phpdox": "*",
		"phpmd/phpmd": "^2.0.0",
		"squizlabs/php_codesniffer": "^2.0.0",
		"sebastian/phpcpd": "^2.0.0",
		"pdepend/pdepend": "^2.0.0"
	},
	"config": {
		"bin-dir": "bin/"
	},
    "scripts": {
      "post-create-project-cmd": [
          "Rhubarb\\Crown\\Scripts\\ProjectTemplates::createMinimumProject"
      ]
    }
}
