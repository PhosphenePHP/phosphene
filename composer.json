{
	"name": "rhubarbphp/rhubarb",
	"description": "A modern enterprise ready PHP framework",
	"keywords": [ "php", "framework" ],
	"homepage": "http://www.rhubarbphp.com/",
	"license": "Apache-2.0",
    "autoload": {
		"psr-4": {
			"Rhubarb\\Crown\\": "src/",
		    "Rhubarb\\Crown\\Tests\\": "tests/"
		}
	},
	"require": {
	  "components/jquery": ">=1.9",
	  "components/jqueryui": ">=1.10"
	},
  	"require-dev": {
	    "rhubarbphp/custard": ">=1.0.3",
	    "rhubarbphp/rhubarb": "dev-develop as v1.0",
		"rhubarbphp/module-build-status-updater": "dev-debug as 1.0.3",
		"tan-tan-kanarek/github-php-client": "dev-master as 1.0",
		"phpunit/phpunit": "4.*",
		"codeception/codeception": "*",
		"phploc/phploc": "*",
		"theseer/phpdox": "*",
		"phpmd/phpmd": "*",
		"squizlabs/php_codesniffer": "*",
		"sebastian/phpcpd": "*",
		"pdepend/pdepend": "*"
	},
	"config": {
		"bin-dir": "bin/"
	},
    "scripts": {
      "post-create-project-cmd": [
          "Rhubarb\\Crown\\Scripts\\ProjectTemplates::createMinimumProject"
      ]
    }
}
